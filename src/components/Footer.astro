<style>
  footer {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    justify-content: space-between;
    align-items: flex-start;
    border-top: 1px dotted var(--secondary);
    font-size: 0.8rem;
    padding: 0.5rem 0.25rem;
    color: var(--secondary);
    text-align: center;
    margin-left: 1rem;
    margin-right: 1rem;
  }
  p {
    margin: 0;
  }
  .socials {
    display: flex;
    flex-direction: row;
    gap: 0.5rem;
    width: min-content;
    align-self: flex-end;
  }
  .socials svg path {
    transition: 0.18s;
    transition-timing-function: ease-in;
    color: var(--secondary);
  }
  .socials svg:hover path {
    color: var(--accent);
  }

  @media only screen and (min-width: 720px) {
    footer {
      flex-direction: row;
      padding: 1rem 0.5rem;
    }
  }
</style>
