---
import HeaderLink from "./HeaderLink.astro";
import ThemeSwitcher from "./ThemeSwitcher.astro";
import { SITE_TITLE } from "../consts";
---

<header>
  <nav>
    <a href="/">
      <svg viewBox="0 0 256 256" fill="none" xmlns="http://www.w3.org/2000/svg" role="presentation" height="18px" width="18px" style="margin-right: 0.25rem;">
        <rect x="101" y="32" width="150" height="150" transform="rotate(30 101 32)" fill="var(--accent)" id="logo_rect"/>
      </svg>
      <h2>{SITE_TITLE}</h2>
    </a>
    <div class="internal-links">
      <HeaderLink href="/">Home</HeaderLink>
      <HeaderLink href="/blog">Blog</HeaderLink>
    </div>
  </nav>
  <div class="separator"></div>
  <ThemeSwitcher />
</header>
<style>
  header {
    padding: 1rem;
    margin-bottom: 3rem;
    display: flex;
    flex-direction: row;
    align-items: center;
    gap: 0.5rem;
  }
  .separator {
    height: 1.8rem;
    width: 1px;
    background: var(--secondary);
  }
  h2 {
    display: inline-block;
    margin: 0;
    font-size: 1.5rem;
    color: var(--gray);
  }

  h2 a,
  h2 a.active {
    text-decoration: none;
  }
  nav {
    display: flex;
    flex: 1;
    justify-content: space-between;
    flex-direction: row;
    gap: 0.5rem;
  }
  nav a {
    color: var(--black);
    border-bottom: 2px solid transparent;
    text-decoration: none;
  }
  nav a.active {
    text-decoration: none;
    border-bottom-color: var(--accent);
  }
  .internal-links {
    display: flex;
    gap: 1rem;
  }

  @media only screen and (max-width: 720px) {
    header {
      display: grid;
      grid-template-rows: repeat(2, 2rem);
      grid-template-columns: auto 1px 30px;
      gap: 1.1rem;
      margin-bottom: 1rem;
    }

    .separator {
      width: 0px;
    }

    nav {
      grid-row: 1 / 3;
      display: flex;
      flex-direction: column;
      gap: 1.1rem;
    }
  }
</style>
